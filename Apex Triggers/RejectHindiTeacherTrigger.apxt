trigger RejectHindiTeacherTrigger on Contact (before update) {
    for(Contact contactObj : [ SELECT Id, (SELECT Subject__c FROM Teaches__r) FROM Contact WHERE ID IN :Trigger.new ] ){
        
        for(Teach__c teachObj : contactObj.Teaches__r){
            
            if(teachObj.Subject__c!=null && teachObj.Subject__c.contains('Hindi'))
                Trigger.newMap.get(contactObj.Id).addError('Update is not allowed as Teacher is teaching Hindi.');
           
        }
    }
}