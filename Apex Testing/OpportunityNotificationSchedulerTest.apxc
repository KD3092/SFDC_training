@isTest
private class OpportunityNotificationSchedulerTest {
    private static final String OPPORTUNITY_NAME='Test Opportunity';
    private static final String STAGE_NAME_QUALIFICATION='Qualification';
    private static final Integer NO_OF_DAYS=30;
    private static final String EXPECTED_OWNER_EMAILID='kuldeep.tiwari@metacube.com';
    
    @isTest
    private static void getOpportunityOwnerEmailIdsTest(){
        Opportunity opportunityObj= new Opportunity(Name = OPPORTUNITY_NAME, StageName=STAGE_NAME_QUALIFICATION, CloseDate=Date.today());
        insert opportunityObj;
        
        Test.startTest();
        List<String> toAddressesList= new OpportunityNotificationScheduler(NO_OF_DAYS).getOpportunityOwnerEmailIds();
        Test.stopTest();
        
        System.assert(toAddressesList.contains(EXPECTED_OWNER_EMAILID));
    }    
}